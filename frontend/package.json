{
  "name": "codeaid",
  "displayName": "CodeAid",
  "description": "A VSCode extension for analyzing and visualizing code quality.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:java",
    "onCommand:extension.analyzeCode"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeAidSidebar",
          "title": "CodeAid",
          "icon": "media/logo.svg"
        }
      ]
    },
    "views": {
      "codeAidSidebar": [
        {
          "id": "codeAidView",
          "name": "CodeAid Panel",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.analyzeProject",
        "title": "Analyze Project"
      },
      {
        "command": "extension.analyzeFile",
        "title": "Analyze File"
      },
      {
        "command": "extension.plotClassDiagram",
        "title": "Plot Class Diagram"
      },
      {
        "command": "extension.plotArchitectureDiagram",
        "title": "Plot Architecture Diagram"
      },
      {
        "command": "extension.plotDependencyDiagram",
        "title": "Plot Dependency Diagram"
      },
      {
        "command": "extension.displayRate",
        "title": "Display Rate"
      }
    ],
    "languages": [
      {
        "id": "java",
        "extensions": [
          ".java"
        ],
        "aliases": [
          "Java"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@google-cloud/aiplatform": "^3.34.0",
    "@google/generative-ai": "^0.21.0",
    "axios": "^1.7.8",
    "codeaid": "file:"
  }
}
