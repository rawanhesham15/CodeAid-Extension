{
  "name": "codeaid",
  "displayName": "CodeAid",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:java",
    "onCommand:extension.analyzeCode"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.analyzeProject",
        "title": "Analyze whole project for SOLID Violations"
      },
      {
        "command": "extension.analyzeFile",
        "title": "Analyze current file for SOLID Violations"
      },
      {
        "command": "extension.plotClassDiagram",
        "title": "Plot Class Diagram for the Project"
      },
      {
        "command": "extension.viewProvider",
        "title": "Open Service UI"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "myCustomViewContainer",
          "title": "CodeAid",
          "icon": "media/logo.svg"
        }
      ]
    },
    "views": {
      "myCustomViewContainer": [
        {
          "id": "myView",
          "name": "Service choose"
        }
      ]
    },
    "languages": [
      {
        "id": "java",
        "extensions": [
          ".java"
        ],
        "aliases": [
          "Java"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/caseless": "^0.12.5",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/pdfkit": "^0.13.7",
    "@types/tough-cookie": "^4.0.5",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@google-cloud/aiplatform": "^3.34.0",
    "@google/generative-ai": "^0.21.0",
    "@mermaid-js/mermaid-cli": "^11.4.2",
    "axios": "^1.7.8",
    "mermaid": "^11.4.1",
    "pako": "^2.1.0",
    "pdfkit": "^0.15.1",
    "puppeteer": "^23.0.0"
  }
}
